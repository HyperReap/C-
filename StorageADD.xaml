<Window x:Class="WpfDatabase.StorageADD"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDatabase"
        mc:Ignorable="d"
        Title="StorageADD" Height="350" Width="300" Loaded="Window_Loaded">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Tboxes and labels for new package -->
        <Grid Grid.Row="0">
            <DataGrid x:Name="DGstorage" SelectionChanged="DGstorage_SelectionChanged"/>
        </Grid>       
        <!-- Ok Button-->
        <Button x:Name="OkBtn" Content="OK" Grid.Row="1" Click="OkBtn_Click"/>
    </Grid>
</Window>
